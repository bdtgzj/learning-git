<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.ehomeguru.view.UserInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fragment_userinfo_linearlayout_padding"
            android:paddingRight="@dimen/fragment_userinfo_linearlayout_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:text="@string/fragment_userinfo_nickname"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fragment_userinfo_linearlayout_padding"
            android:paddingRight="@dimen/fragment_userinfo_linearlayout_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:text="@string/fragment_userinfo_mphone"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fragment_userinfo_linearlayout_padding"
            android:paddingRight="@dimen/fragment_userinfo_linearlayout_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:text="@string/fragment_userinfo_email"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fragment_userinfo_linearlayout_padding"
            android:paddingRight="@dimen/fragment_userinfo_linearlayout_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:text="@string/fragment_userinfo_oldpass"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fragment_userinfo_linearlayout_padding"
            android:paddingRight="@dimen/fragment_userinfo_linearlayout_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:text="@string/fragment_userinfo_newpass"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/fragment_userinfo_linearlayout_padding"
            android:paddingRight="@dimen/fragment_userinfo_linearlayout_padding">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:text="@string/fragment_userinfo_submit" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_me_linearlayout_item_margin"
                android:text="@string/fragment_userinfo_reset" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>